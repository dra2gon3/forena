<html xmlns:frx="urn:FrxReports">
	<head>
		<title>User logs</title>
        <frx:category>Drupal Administration</frx:category>
        <frx:options  /> 
		<frx:parameters >
			<frx:parm id="user" require="1" label="User Name">3</frx:parm>
		</frx:parameters>
		<frx:fields>
			<frx:field id="details" link="admin/reports/event/{wid}">Details</frx:field>
			<frx:field id="total"  link="reports/DrupalUserLogs?name={name}" format="date" format_string=""></frx:field>
			<frx:field id="name">Anonymous</frx:field>
			<frx:field id="timestamp" format="drupal_date_format" format-string="small"></frx:field>
			<frx:field id="created" format="drupal_date_format" format-string="small"></frx:field>
		</frx:fields>
	</head>
	<body>
		<div frx:block="drupal/users_in_logs" >
			<h4>Users Appearing in Logs</h4>
			<table>
				<thead>
					<tr><th width="200">User</th><th>Log Entries</th></tr>
				</thead>
				<tbody>
					<tr frx:foreach="*">
						<td >{name}</td>
						<td>{total}</td>
						<td></td>
					</tr>
				</tbody>
			</table>			
		</div>
		<h4>Log Entries for {name}</h4>
		  <table frx:block="drupal/user_logs">
				<thead>
					<tr><th width="200px">Type</th><th width="200">Location</th><th>Timestamp</th></tr>
				</thead>
				<tbody>
					<tr frx:foreach="*">
						<td>{type}</td>
						<td>{location}</td>
						<td>{timestamp}</td>
						<td>{details}</td>
						<td></td>
					</tr>
				</tbody>
		  </table>
	</body>
</html>